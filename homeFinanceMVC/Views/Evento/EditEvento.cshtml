@model homeFinanceMVC.Models.EvActivoPasivo
@{
    ViewBag.Title = "EditEvento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-info" role="alert">
    <h3>Modificar Datos del Evento</h3>
</div>

<br />
<br />

@using (Html.BeginForm("EditEvento", "Evento", FormMethod.Post))
{
    @Html.HiddenFor(x => x.IdEvento)

    <div class="form-horizontal">
        <div class="container">
            <fieldset>

                <div class="form-group">
                    <label class="control-label col-md-2">Descripción</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.DescEvento, new { @class = "form-control inputstl" })
                        @Html.ValidationMessageFor(model => model.DescEvento, "", new { @class = "label label-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Tipo</label>
                    <div class="col-md-10">
                        @if (Model.TipoEvento == "D")
                        {
                            @Html.RadioButtonFor(model => model.TipoEvento, "D", new { Checked = "checked" })
                            @Html.Label("Debito", new { @class = "marg" })
                            @Html.RadioButtonFor(model => model.TipoEvento, "C", new { @class = "marg" })
                            @Html.Label("Credito")
                            }
                            else
                            {
                            @Html.RadioButtonFor(model => model.TipoEvento, "D", new { @class = "marg" })
                            @Html.Label("Debito", new { @class = "marg" })
                            @Html.RadioButtonFor(model => model.TipoEvento, "C", new { Checked = "checked" })
                            @Html.Label("Credito")
                            }
                    </div>
                </div>

                <br />
                <br />

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar Datos" class="btn btn-primary" />
                        @Html.ActionLink("Cancelar", "ManupularDatosEvento", null, new { @class = "btn btn-warning" })
                    </div>
                </div>

            </fieldset>
        </div>
    </div>

    <style>
        .marg {
            margin: 0 10px 0 2px;
        }

        .inputstl {
            padding: 9px;
            border: solid 1px #4B718B;
            outline: 0;
            background: -webkit-gradient(linear, left top, left 25, from(#FFFFFF), color-stop(4%, #CDDBE4), to(#FFFFFF));
            background: -moz-linear-gradient(top, #FFFFFF, #CDDBE4 1px, #FFFFFF 25px);
            box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
            -moz-box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
            -webkit-box-shadow: rgba(0,0,0, 0.1) 0px 0px 8px;
        }

        .bor {
            border: none;
        }
    </style>

  
}

